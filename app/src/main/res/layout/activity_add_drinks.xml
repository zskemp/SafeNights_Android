<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#737f82"
    android:layout_height="match_parent"
    tools:context="apoorvazachmobileapps.safenights.AddDrinks">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="30dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">>

        <!-- Email Label -->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/datepickertext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/datebutton"
            android:backgroundTint="#FFFFFF"
            android:shadowColor="#737f82"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textColorHint="#737f82"

            android:textColorLink="#737f82">

            <EditText
                android:id="@+id/datepicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:ellipsize="start"
                android:gravity="center_horizontal"
                android:hint="Date of Sin"
                android:inputType="textEmailAddress"
                android:paddingLeft="5dp"
                android:shadowColor="#737f82"
                android:textAlignment="center"
                android:textColor="#737f82"
                android:textColorHint="#FFFFFF"
                android:textColorLink="#737f82" />
        </android.support.design.widget.TextInputLayout>

        <SeekBar
            android:id="@+id/seekbar"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/datepickertext"
            android:layout_centerHorizontal="true"
            android:max="500" />

        <TextView
            android:id="@+id/moneycount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/seekbar"
            android:layout_centerHorizontal="true" />

        <NumberPicker
            android:id="@+id/beercount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignLeft="@+id/seekbar"
            android:layout_alignStart="@+id/seekbar"
            android:layout_below="@id/moneycount" />

        <NumberPicker
            android:id="@+id/winecount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignRight="@+id/seekbar"
            android:layout_below="@id/moneycount" />
        <NumberPicker
            android:layout_width="wrap_content"
            android:paddingTop="20dp"
            android:id="@+id/shotcout"
            android:layout_height="wrap_content"
            android:layout_below="@id/beercount"
            android:layout_alignLeft="@id/seekbar">
        </NumberPicker>
        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/liquorcount"
            android:paddingTop="20dp"
            android:layout_below="@id/winecount"
            android:layout_alignRight="@id/seekbar">

        </NumberPicker>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/liquorcount"
            android:layout_centerHorizontal="true"
            android:onClick="callAddDrinksAPI"/>





    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
