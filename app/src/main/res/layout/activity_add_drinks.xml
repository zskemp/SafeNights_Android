<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="apoorvazachmobileapps.safenights.AddDrinks">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="30dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">>

        <!-- Email Label -->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/datepickertext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/datebutton"
            android:backgroundTint="#FFFFFF"
            android:shadowColor="#737f82"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textColorHint="#737f82"

            android:textColorLink="#737f82">

            <EditText
                android:id="@+id/datepicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:ellipsize="start"
                android:gravity="center_horizontal"
                android:hint="Date of Sin"
                android:inputType="textEmailAddress"
                android:paddingLeft="5dp"
                android:shadowColor="#737f82"
                android:textAlignment="center"
                android:textColor="#737f82"
                android:textColorHint="#FFFFFF"
                android:textColorLink="#737f82" />
        </android.support.design.widget.TextInputLayout>

        <com.jesusm.holocircleseekbar.lib.HoloCircleSeekBar
            android:id="@+id/beerPicker"
            android:layout_width="100dp"
            android:layout_height="105dp"
            android:layout_alignLeft="@+id/seekbar"
            android:layout_centerInParent="true"
            app:max="10"
            app:pointer_size="10dp"
            app:text_size="20sp"
            app:pointer_color="#143f66"
            app:pointer_halo_color="#FFFFFF"
            app:text_color="#3981c2"
            app:wheel_active_color="#000000"
            app:wheel_unactive_color="#3981c2"/>
        <com.jesusm.holocircleseekbar.lib.HoloCircleSeekBar
            android:id="@+id/liquorPicker"
            android:layout_width="100dp"
            android:layout_height="105dp"
            android:layout_alignRight="@+id/seekbar"
            android:layout_centerInParent="true"
            android:paddingLeft="50dp"
            app:max="10"
            app:pointer_size="10dp"
            app:text_size="20sp"
            app:pointer_color="#143f66"
            app:pointer_halo_color="#FFFFFF"
            app:text_color="#3981c2"
            app:wheel_active_color="#000000"
            app:wheel_unactive_color="#3981c2"/>

        <com.jesusm.holocircleseekbar.lib.HoloCircleSeekBar
            android:id="@+id/shotPicker"
            android:layout_width="100dp"
            android:layout_height="105dp"
            android:layout_alignRight="@+id/seekbar"
            android:paddingBottom="20dp"
            android:layout_below="@+id/textView5"
            android:layout_centerInParent="true"
            android:paddingLeft="50dp"
            app:max="10"
            app:pointer_size="10dp"
            app:text_size="20sp"
            app:pointer_color="#143f66"
            app:pointer_halo_color="#FFFFFF"
            app:text_color="#3981c2"
            app:wheel_active_color="#000000"
            app:wheel_unactive_color="#3981c2"/>



        <com.jesusm.holocircleseekbar.lib.HoloCircleSeekBar
            android:id="@+id/winePicker"
            android:layout_width="100dp"
            android:layout_height="105dp"
            android:layout_alignLeft="@+id/seekbar"
            android:layout_below="@+id/textView2"
            android:layout_centerInParent="true"
            android:paddingBottom="20dp"
            android:paddingLeft="50dp"
            app:max="10"
            app:pointer_size="10dp"
            app:text_size="20sp"
            app:pointer_color="#143f66"
            app:pointer_halo_color="#FFFFFF"
            app:text_color="#3981c2"
            app:wheel_active_color="#000000"
            app:wheel_unactive_color="#3981c2"/>

        <SeekBar
            android:id="@+id/seekbar"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:max="500"
            android:layout_above="@+id/textView3"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/moneycount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seekbar"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:onClick="callAddDrinksAPI"
            android:text="Submit" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:paddingBottom="5dp"
            android:paddingRight="17dp"
            android:paddingTop="15dp"
            android:text="Wine"
            android:textAlignment="center"
            android:layout_below="@+id/beerPicker"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/beerPicker"
            android:layout_alignLeft="@+id/beerPicker"
            android:layout_alignStart="@+id/beerPicker"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp"
            android:paddingBottom="5dp"
            android:paddingLeft="17dp"
            android:paddingTop="15dp"
            android:text="Beer" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/liquorPicker"
            android:layout_alignEnd="@+id/textView5"
            android:layout_alignRight="@+id/textView5"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp"
            android:text="Liquor"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp"
            android:paddingBottom="5dp"
            android:paddingLeft="17dp"
            android:paddingTop="15dp"
            android:text="Shots"
            android:layout_above="@+id/winePicker"
            android:layout_alignLeft="@+id/shotPicker"
            android:layout_alignStart="@+id/shotPicker" />



    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
