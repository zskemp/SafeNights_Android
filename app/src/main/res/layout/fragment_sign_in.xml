<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="apoorvazachmobileapps.safenights.TrackingActivity"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    android:background="#211E36"
    android:fitsSystemWindows="true">



    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="56dp"
        android:paddingLeft="24dp"
        android:textColor="#FFFFFF"
        android:paddingRight="24dp"
        android:weightSum="1"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="131dp"
            android:layout_height="72dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:layout_weight="0.21"
            android:src="@drawable/logo1" />
        <TextView android:id="@+id/appname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#02D4F1"
            android:layout_marginBottom="24dp"
            android:text="SafeNights"
            android:fontFamily=""
            android:gravity="center"
            android:textSize="50dip"/>

        <!-- Username Label -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/roundshapebtn"
            android:shadowColor="#737f82"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textColorHint="#737f82"
            android:backgroundTint="#FFFFFF"
            android:textColorLink="#737f82">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/username"
                android:backgroundTint="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Username"
                android:paddingLeft="5dp"
                android:inputType="text"
                android:shadowColor="#737f82"
                android:ellipsize="start"
                android:gravity="center_horizontal"
                android:textColor="#737f82"
                android:textAlignment="center"
                android:textColorHint="#FFFFFF"
                android:textColorLink="#737f82" />
        </android.support.design.widget.TextInputLayout>

        <!-- Password Label -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#737f82"
            android:textColorLink="#737f82"
            android:backgroundTint="#FFFFFF"
            android:shadowColor="#737f82"
            android:textColorHint="#737f82"
            android:textAlignment="center"
            android:background="@drawable/roundshapebtn"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:textColor="#737f82"
                android:backgroundTint="#FFFFFF"
                android:paddingLeft="5dp"
                android:ellipsize="start"
                android:gravity="center_horizontal"
                android:textColorLink="#737f82"
                android:shadowColor="#737f82"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textAlignment="center"
                android:textColorHint="#737f82"
                android:hint="Password"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/login_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/roundbtn"
            android:padding="12dp"
            android:text="Log In"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/avi"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            style="@style/AVLoadingIndicatorView"
            android:visibility="gone"
            app:indicatorName="BallSpinFadeLoaderIndicator"
            app:indicatorColor="#FFFFFF" />

        <TextView
            android:id="@+id/register_button"
            android:layout_width="fill_parent"
            android:paddingTop="20dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="Create Account"
            android:textColor="#FFFFFF"
            android:textSize="30dip" />


    </LinearLayout>
</ScrollView>
